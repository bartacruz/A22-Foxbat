<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>lamp.ac</path>

  <animation>
    <object-name>lampoff</object-name>
    <object-name>lamponb</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>lampoff</object-name>
    <object-name>lamponb</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lampoff</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <factor-prop>/controls/lighting/instrument-lights</factor-prop>
      <red>   0 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>lampon</object-name>
    <condition>
      <property>/controls/electric/battery-switch</property>
    </condition>
    <emission>
      <!-- <factor-prop>/controls/lighting/instrument-lights</factor-prop> -->
      <red>   2 </red>
      <green> 2 </green>
      <blue>  2 </blue>
    </emission>
  </animation>

  <!-- battery charge : on if the engine not running
       and / or the alternator not engaged
  -->
  <animation>
    <type>select</type>
    <object-name>lampon</object-name>
    <condition>
      <and>
        <or>
          <not><property>/engines/engine/running</property></not>
          <not><property>/controls/engines/engine/master-alt</property></not>
          <property>/controls/lighting/warning-test</property>
        </or>
        <property>/controls/electric/battery-switch</property>
      </and>
    </condition>
  </animation>

</PropertyList>
